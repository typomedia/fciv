{
    "name": "typomedia/fciv",
    "description": "FCIV compatible lib for hash and verify files",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Typomedia\\Fciv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Typomedia\\Fciv\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "symfony/finder": "^5.4",
        "symfony/serializer": "^5.4",
        "symfony/property-access": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "phpmd/phpmd": "^2.13",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit --testdox --coverage-text"
        ],
        "fix": [
            "vendor/bin/phpcbf --standard=PSR1,PSR12 src"
        ],
        "check": [
            "vendor/bin/phpcs --standard=PSR1,PSR12 --error-severity=1 --warning-severity=8 src",
            "vendor/bin/phpmd src text codesize, controversial, design, naming, unusedcode"
        ]
    }
}
